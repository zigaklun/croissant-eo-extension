{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://zigaklun.github.io/croissant-eo-extension/schema/v1.0.0/schema.json",
  "title": "Earth Observation Croissant Extension",
  "description": "Schema extension for Earth Observation datasets in MLCommons Croissant format",
  "version": "1.0.0",

  "definitions": {
    "scope": {
      "type": "string",
      "description": "Geographic scope or description of dataset coverage"
    },

    "hasTask": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "Description of the ML task"
        },
        "taskType": {
          "type": "string",
          "enum": [
            "classification",
            "segmentation",
            "object detection",
            "change detection",
            "regression"
          ],
          "description": "Type of machine learning task"
        }
      },
      "required": ["taskType"]
    },

    "band": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "description": "Band identifier (e.g., B1, B2, Red)"
          },
          "value": {
            "type": "string",
            "description": "Band description with wavelength range"
          }
        },
        "required": ["label", "value"]
      }
    },

    "hasClass": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "description": "Class name"
          },
          "identifier": {
            "type": "integer",
            "description": "Class ID number"
          }
        },
        "required": ["label", "identifier"]
      }
    },

    "statisticsInfo": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "description": "Statistic name"
          },
          "value": {
            "type": "string",
            "description": "Statistic value"
          }
        },
        "required": ["label", "value"]
      }
    },

    "metricsInLIT": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "identifier": {
            "type": "string",
            "description": "Reference identifier (URL, DOI, etc.)"
          },
          "algorithm": {
            "type": "string",
            "description": "Algorithm used"
          },
          "literature_metric": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string",
                  "description": "Metric name"
                },
                "value": {
                  "type": "string",
                  "description": "Metric value"
                }
              },
              "required": ["label", "value"]
            }
          }
        }
      }
    },

    "labeling": {
      "type": "object",
      "properties": {
        "identifier": {
          "type": "string",
          "description": "Labeling process identifier"
        },
        "labeler": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "identifier": {
                "type": "string",
                "description": "Labeler identifier"
              },
              "name": {
                "type": "string",
                "description": "Labeler name"
              }
            },
            "required": ["name"]
          }
        },
        "procedure": {
          "type": "object",
          "properties": {
            "identifier": {
              "type": "string"
            },
            "scope": {
              "type": "string",
              "description": "Description of labeling scope"
            },
            "method": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "label": {
                    "type": "string"
                  },
                  "definition": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },

    "status": {
      "type": "string",
      "enum": ["completed", "ongoing", "deprecated", "beta"],
      "description": "Dataset completion status"
    }
  },

  "properties": {
    "eo:scope": { "$ref": "#/definitions/scope" },
    "eo:has-task": { "$ref": "#/definitions/hasTask" },
    "eo:amountOfTrainingData": {
      "type": "string",
      "description": "Number of training samples (as string)"
    },
    "eo:numberOfClasses": {
      "type": "string",
      "description": "Number of classification classes (as string)"
    },
    "eo:band": { "$ref": "#/definitions/band" },
    "eo:has_class": { "$ref": "#/definitions/hasClass" },
    "eo:statisticsInfo": { "$ref": "#/definitions/statisticsInfo" },
    "eo:metricsInLIT": { "$ref": "#/definitions/metricsInLIT" },
    "eo:labeling": { "$ref": "#/definitions/labeling" },
    "eo:spatialResolutionInMeters": {
      "type": "string",
      "description": "Spatial resolution in meters (as string)"
    },
    "eo:status": { "$ref": "#/definitions/status" }
  }
}
